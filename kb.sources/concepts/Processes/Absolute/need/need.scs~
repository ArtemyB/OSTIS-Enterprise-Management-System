need
	=> nrel_main_idtf:[need](*<-lang_en;;*);
		[потребность](*<-lang_ru;;*);
	=> nrel_idtf:
		[нужда](*<-lang_ru;;*);
	<- rrel_key_sc_element:...
		(*
			<- sc_definition;;
			=> nrel_main_idtf: [Definition (need)](*<- lang_en;;*);;
			=> nrel_main_idtf: [Определение (потребность)](*<- lang_ru;;*);;
			<= nrel_sc_text_translation:...
			(*
				-> rrel_example:
					[<b>Потребность</b> - внутреннее состояние психологического или функционального ощущения недостаточности чего-либо.]
					(*
						<- lang_ru;;
						=> nrel_format: format_html;;
					*);;
			*);;
		*);
	<= nrel_subdividing:...
		(*
			=> nrel_main_idtf: [By scope](*<- lang_en;;*);;
			=> nrel_main_idtf: [По сфере деятельности](*<- lang_ru;;*);;
			-> labor_need;;
			-> communication_need;;
			-> rest_need;;
			-> cognition_need;;
		*);
	<= nrel_subdividing:
		(*
			=> nrel_main_idtf: [By the subject](*<- lang_en;;*);;
			=> nrel_main_idtf: [По субъекту](*<- lang_ru;;*);;
			-> group_need;;
			-> individual_need;;
			-> collective_need;;
			-> social_need;;
		*);
	<= nrel_inclusion: state;;
	
